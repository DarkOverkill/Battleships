@using BattleShips.WebUI.Models;

@{ 
    @model List<RatingDataModel>
}

@{
    ViewBag.Title = "PlayerRating";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="content">
    <div class="ratingTable">
        @for (int i = 0; i < Model.Count; ++i)
        {
            <div class="ratingPlace">
                @(i + 1)
            </div>
            <div class="ratingName">
                @Model[i].UserName
            </div>
            <div class="ratingScore">
                @Model[i].Score
            </div>
        }
    </div>
</div>